extends layout

block content

  if error
    div.row
      div.col-md-12
        div.alert.danger
          p= error

  if message
    div.row
      div.col-md-12
        div.alert.success
          p= message

  div.row
    div.col-md-12
      h1= title 

  if (typeof results !== 'undefined' && results !== null && results.length)
    each item in results
      div(class='row' id=item.id)
        div.col-md-12
          div.row
            div.col-md-12
              h3= item.name
          div.row
            div.col-md-12
              p Number of persons going to this place: 
                span(class='total')= item.totalGoing
          div.row
            div.col-md-12
              if auth
                p 
                  if item.currentUserIsGoing
                    a(class='btn btn-primary not-going action' href='/search/not-going/' + item.id data-id=item.id data-action='not-going') I'm not going anymore!
                  else
                    a(class='btn btn-primary going action' href='/search/going/' + item.id data-id=item.id data-action='going') I'm going!
              else
                p 
                  small Please, log in to tell if you are going to this place.
          div.row
            div.col-md-3
              img(src=item.image_url class='responsive-image')
            div.col-md-4
              p 
                | #{item.location.address1} <br />
                | #{item.location.zip_code} #{item.location.city} <br />
                | #{item.display_phone} 
      div.row
        div.col-md-12
          hr           
  else
    div.row
      div.col-md-12
        p No results